<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GoombaCast.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="GoombaCast.Views.SettingsWindow"
        x:DataType="vm:SettingsWindowViewModel"
        MinWidth="550" MinHeight="500"
        MaxWidth="800" MaxHeight="900"
        CanMaximize="False"
        SizeToContent="WidthAndHeight"
        Icon="/Assets/goomba-logo.ico"
        Title="GoombaCast Settings"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
        ExtendClientAreaToDecorationsHint="True"
        WindowStartupLocation="CenterOwner">

    <Design.DataContext>
        <vm:SettingsWindowViewModel/>
    </Design.DataContext>

    <Panel>
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    TintColor="Black"
                    TintOpacity="1"
                    MaterialOpacity="0.65" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>

        <DockPanel Margin="20">
            <!-- Header -->
            <Grid DockPanel.Dock="Top" ColumnDefinitions="Auto,*" Margin="0,0,0,20">
                <Image Source="/Assets/goomba-logo.ico" Width="40" Height="40"
                       IsHitTestVisible="False" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="Settings" FontSize="24" FontWeight="Light"
                          Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>

            <!-- Main Content -->
            <TabControl>
                <!-- Audio Tab -->
                <TabItem Header="Audio" FontSize="16">
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20" Spacing="25" MaxWidth="700">
                            <!-- Mixer Section -->
                            <Border Background="#20FFFFFF" CornerRadius="8" Padding="15">
                                <StackPanel Spacing="15">
                                    <TextBlock Text="AUDIO MIXER" Foreground="#99FFFFFF" 
                                             FontSize="12" FontWeight="SemiBold"/>
                                    
                                    <!-- Add Device Button -->
                                    <Button Content="Add Input Device" 
                                            Command="{Binding AddInputSourceCommand}"
                                            HorizontalAlignment="Stretch"/>
                                    
                                    <!-- Input Sources List -->
                                    <ItemsControl ItemsSource="{Binding InputSources}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#10FFFFFF" CornerRadius="4" Padding="10" Margin="0,5">
                                                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                                                        <!-- Device Name -->
                                                        <TextBlock Text="{Binding Name}" 
                                                                 Foreground="White" 
                                                                 FontWeight="SemiBold"/>
                                                        
                                                        <!-- Remove Button -->
                                                        <Button Grid.Column="1" 
                                                                Content="✕" 
                                                                Command="{Binding $parent[ItemsControl].((vm:SettingsWindowViewModel)DataContext).RemoveInputSourceCommand}"
                                                                CommandParameter="{Binding}"
                                                                Width="30" Height="30"/>
                                                        
                                                        <!-- Volume Slider -->
                                                        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" 
                                                                  Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                                                            <TextBlock Text="Volume:" Foreground="White" 
                                                                     VerticalAlignment="Center"/>
                                                            <Slider Value="{Binding Volume}" 
                                                                   Minimum="0" Maximum="2" 
                                                                   Width="150"
                                                                   TickFrequency="0.1"/>
                                                            <TextBlock Text="{Binding Volume, StringFormat={}{0:P0}}" 
                                                                     Foreground="White" 
                                                                     VerticalAlignment="Center"
                                                                     Width="40"/>
                                                            
                                                            <!-- Mute/Solo Buttons -->
                                                            <ToggleButton Content="M" 
                                                                        IsChecked="{Binding IsMuted}"
                                                                        Width="30" Height="30"
                                                                        ToolTip.Tip="Mute"/>
                                                            <ToggleButton Content="S" 
                                                                        IsChecked="{Binding IsSolo}"
                                                                        Width="30" Height="30"
                                                                        ToolTip.Tip="Solo"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>

                            <!-- Limiter Section -->
                            <Border Background="#20FFFFFF" CornerRadius="8" Padding="15">
                                <StackPanel Spacing="15">
                                    <TextBlock Text="AUDIO LIMITER" Foreground="#99FFFFFF" 
                                             FontSize="12" FontWeight="SemiBold"/>
                                    <CheckBox Content="Enable Limiter" IsChecked="{Binding LimiterEnabled}"
                                            Foreground="White"/>
                                    <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto">
                                        <TextBlock Text="Threshold" Foreground="White" 
                                                 VerticalAlignment="Center"/>
                                        <NumericUpDown Grid.Column="1" Margin="15,0"
                                                    Value="{Binding LimiterThreshold}"
                                                    Minimum="-60" Maximum="0"
                                                    Increment="1"
                                                    Width="120"
                                                    ToolTip.Tip="Limiter threshold in dB"/>
                                        <TextBlock Grid.Column="2" Text="dB" Foreground="White" 
                                                 VerticalAlignment="Center"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Server Tab -->
                <TabItem Header="Server" FontSize="16">
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20" Spacing="25" MaxWidth="700">

                            <!-- Connection Settings -->
                            <Border Background="#20FFFFFF" CornerRadius="8" Padding="15">
                                <StackPanel Spacing="15">
                                    <TextBlock Text="SERVER CONNECTION" Foreground="#99FFFFFF" 
                                             FontSize="12" FontWeight="SemiBold"/>
                                    <StackPanel Spacing="10">
                                        <TextBlock Text="Server Address" Foreground="White"/>
                                        <TextBox Text="{Binding ServerAddress}"
                                                ToolTip.Tip="Enter the server address (e.g., https://example.com:8005/station-name/source.mp3)"/>
                                    </StackPanel>
                                    
                                    <StackPanel Spacing="10">
                                        <TextBlock Text="Username" Foreground="White"/>
                                        <TextBox Text="{Binding Username}"/>
                                    </StackPanel>
                                    
                                    <StackPanel Spacing="10">
                                        <TextBlock Text="Password" Foreground="White"/>
                                        <TextBox Text="{Binding Password}" PasswordChar="*"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Stream Settings -->
                            <Border Background="#20FFFFFF" CornerRadius="8" Padding="15">
                                <StackPanel Spacing="15">
                                    <TextBlock Text="STREAM SETTINGS" Foreground="#99FFFFFF" 
                                             FontSize="12" FontWeight="SemiBold"/>
                                    <StackPanel Spacing="10">
                                        <TextBlock Text="Stream Name" Foreground="White"/>
                                        <TextBox Text="{Binding StreamName}"
                                                ToolTip.Tip="Enter the stream name (e.g., My Local Icecast Stream)"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Output Tab -->
                <TabItem Header="Output" FontSize="16">
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20" Spacing="25" MaxWidth="700">

                            <!-- Recording Settings -->
                            <Border Background="#20FFFFFF" CornerRadius="8" Padding="15">
                                <StackPanel Spacing="15">
                                    <TextBlock Text="RECORDING SETTINGS" Foreground="#99FFFFFF" 
                                             FontSize="12" FontWeight="SemiBold"/>
                                    <StackPanel Spacing="10">
                                        <TextBlock Text="Recording Directory" Foreground="White"/>
                                        <Grid ColumnDefinitions="*, Auto">
                                            <TextBox Grid.Column="0" 
                                                    Text="{Binding RecordingDirectory}"
                                                    IsReadOnly="True"
                                                    ToolTip.Tip="Location where recordings will be saved"/>
                                            <Button Grid.Column="1" 
                                                    Margin="5,0,0,0"
                                                    Content="Browse..."
                                                    Command="{Binding SelectRecordingDirectoryCommand}"/>
                                        </Grid>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </DockPanel>
    </Panel>
</Window>
